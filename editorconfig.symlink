# http://editorconfig.org/
# https://github.com/sindresorhus/editorconfig-sublime#readme

root=true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

[*.go]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4